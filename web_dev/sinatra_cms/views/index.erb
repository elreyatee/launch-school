<ul>
  <% @files.each_with_index do |file| %>
    <li><a href="/<%= file %>"><%= file %></a>
       <% if logged_in? %>
         <a href="/<%= file %>/edit">Edit</a>
         <form class="inline" method="post" action="/<%= file %>/delete">
           <button type="submit">Delete</button>
         </form>
         <form class="inline" method="post" action="/<%= file %>/duplicate">
           <button type="submit">Duplicate</button>
         </form>
       <% end %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
  <p><a href="/new">New Document</a></p>
<% end %>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="inline">Signed in as <%= session[:username] %>.</p>
    <button type="submit">Sign Out</button>
  </form>
<% else %>
  <p class="inline"><a href="/users/signin">Sign In</a></p>
  <p class="inline"><a href="/users/signup">Sign Up</a></p>
<% end %>
